{
  "dashboard": {
    "id": null,
    "title": "LoggingEngine - Ultra-Low Latency Performance",
    "tags": ["logging", "performance", "latency"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Logging Latency P99",
        "type": "stat",
        "targets": [
          {
            "expr": "logging_latency_p99_microseconds",
            "legendFormat": "P99 Log Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "µs",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Log Entries Per Second",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(logging_entries_total[1m])",
            "legendFormat": "Entries/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Buffer Utilization",
        "type": "gauge",
        "targets": [
          {
            "expr": "logging_buffer_utilization_percent",
            "legendFormat": "Buffer %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Dropped Entries",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(logging_entries_dropped_total[5m])",
            "legendFormat": "Dropped/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 0.1}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Latency Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "logging_latency_avg_microseconds",
            "legendFormat": "Average Latency"
          },
          {
            "expr": "logging_latency_p99_microseconds",
            "legendFormat": "P99 Latency"
          },
          {
            "expr": "logging_latency_max_microseconds",
            "legendFormat": "Max Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "µs"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 6,
        "title": "Transport Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(logging_transport_sends_total[1m])",
            "legendFormat": "Transport Sends/sec"
          },
          {
            "expr": "rate(logging_transport_errors_total[1m])",
            "legendFormat": "Transport Errors/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 7,
        "title": "Log Level Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "logging_level_total",
            "legendFormat": "{{level}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 8,
        "title": "Buffer Overflow Events",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(logging_buffer_overflows_total[1h])",
            "legendFormat": "Overflows Last Hour"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      }
    ],
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "refresh": "1s"
  }
}
